apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx-deployement
spec:
  replicas: 1
  selector:
  matchLabels:
  app: nginx-app
  template:
  metadata:
  labels:
  app: nginx-app
  spec:
  containers:
  - name: nginx
  image: nginx:1.17.0
  resources:
  requests:
  cpu: 100m
  memory: 128Mi
  limits:
  cpu: 250m
  memory: 256Mi
  ports:
  - containerPort: 80
